<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/dialog_bg"
    android:layout_height="wrap_content">


    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/imagep_sheet"
        android:layout_width="95dp"
        android:layout_height="83dp"
        android:layout_marginTop="56dp"
        android:src="@drawable/ic_baseline_account_circle_24"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.49"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageViewcc"
        android:layout_width="46dp"
        android:layout_height="37dp"
        android:layout_marginTop="40dp"
        app:layout_constraintStart_toStartOf="@+id/sendm_sheet"
        app:layout_constraintTop_toBottomOf="@+id/sendm_sheet"
        app:srcCompat="@drawable/ic_baseline_phone_24" />


    <TextView
        android:id="@+id/num_sheet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:textSize="22sp"
        app:layout_constraintBottom_toBottomOf="@+id/imageViewcc"
        app:layout_constraintStart_toEndOf="@+id/imageViewcc"
        app:layout_constraintTop_toTopOf="@+id/imageViewcc" />

    <TextView
        android:id="@+id/resp_sheet"
        android:layout_width="6dp"
        android:layout_height="16dp"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="40dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/sendm_sheet"
        app:layout_constraintTop_toBottomOf="@+id/imageViewcc"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/sendm_sheet"
        android:layout_width="191dp"
        android:layout_height="46dp"
        android:layout_marginTop="32dp"
        android:text="Envoyer un message"
        app:layout_constraintEnd_toEndOf="@+id/imagep_sheet"
        app:layout_constraintStart_toStartOf="@+id/imagep_sheet"
        app:layout_constraintTop_toBottomOf="@+id/imagep_sheet" />

</androidx.constraintlayout.widget.ConstraintLayout>