<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">


    <androidx.cardview.widget.CardView
        android:id="@+id/fff"
        android:layout_width="@dimen/_100sdp"
        android:layout_height="@dimen/_100sdp"
        android:layout_marginStart="@dimen/_6sdp"
        android:layout_marginTop="@dimen/_8sdp"
        android:layout_marginEnd="@dimen/_4sdp"
        android:background="#4C4B4B"
        app:cardCornerRadius="@dimen/_3ssp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/imagelay"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#4C4B4B"
            android:scaleType="fitCenter" />
    </androidx.cardview.widget.CardView>


    <TextView
        android:id="@+id/titrelay"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_3sdp"
        android:layout_marginBottom="@dimen/_6sdp"
        android:paddingLeft="@dimen/_7sdp"
        android:paddingRight="@dimen/_5sdp"
        android:textColor="#CDCDCD"
        android:textSize="@dimen/_10ssp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/fff"
        app:layout_constraintHorizontal_bias="0.3"
        app:layout_constraintStart_toStartOf="@+id/fff"
        app:layout_constraintTop_toBottomOf="@+id/fff" />
</androidx.constraintlayout.widget.ConstraintLayout>